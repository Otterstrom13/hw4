<h1>New Entry</h1>

<%= form_with(model: @entry, url: entries_path, method: "post", local: true, multipart: true) do |form| %>
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :occurred_on, class: "form-label" %>
    <%= form.date_field :occurred_on, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :uploaded_image, class: "form-label" %>
    <%= form.file_field :uploaded_image, accept: "image/png,image/jpg,image/jpeg,image/gif", class: "form-control" %>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
<% end %>